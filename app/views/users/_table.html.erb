<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="true">All Offers</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="false">Pending Offers</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="accepted-tab" data-bs-toggle="tab" data-bs-target="#accepted" type="button" role="tab" aria-controls="accepted" aria-selected="false">Accepted Offers</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
    <div class="card-body">
      <table id="datatablesSimple">
        <thead>
          <tr>
            <th class="px-3">Game</th>
            <th class="px-3">Condition</th>
            <th class="px-3">Description</th>
            <th class="px-3">Price</th>
          </tr>
        </thead>
        <tbody>
          <% if offers %>
            <% offers.each do |offer| %>
              <tr class="user-link-parent">
                <td class="px-3"><%= offer.boardgame.name %></td>
                <td class="px-3"><%= offer.title %></td>
                <td class="px-3"><%= offer.description %></td>
                <td class="px-3">$<%= offer.price %></td>
                <td class="px-3"><%= link_to "", offer_path(offer), class: "user-link" %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">pending</div>
  <div class="tab-pane fade" id="accepted" role="tabpanel" aria-labelledby="accepted-tab">accepted</div>
</div>
</div>
