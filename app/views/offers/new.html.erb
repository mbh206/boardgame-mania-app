<div class="container">
  <h1 class= "my-3">Create an Offer</h1>
  <%= simple_form_for(@offer) do |f|%>
    <%= f.association :boardgame, as: :select, prompt: 'Select'%>
    <%= f.input :title, placeholder: ""%>
    <%= f.input :description %>
    <%= f.input :price%>
    <%= f.input :photos, as: :file, input_html: { multiple: true }  %>
    <%= f.submit class: "btn btn-primary mb-3 " %>
  <% end %>
</div>
