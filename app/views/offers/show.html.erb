<div class="container ">
  <h1 class="my-3 text-center"><%= @offer.title %></h1>
  <div class="row">
    <div class="col col-8">
      <div id="carouselExampleControls" class="carousel slide w-100 rounded shadow-lg m-0" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @offer.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= index == 0 ? "active" : "" %>">
              <%= cl_image_tag photo.key, class: "d-block w-100", alt: "..." %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <div class="my-5 text-left">
        <h4>Description:</h4>
        <p><%= @offer.description %></p>
      </div>
      <hr>
      <div class="py-5">
        <h4>Owner: <%= @offer.user.name %></h4>
      </div>
    </div>
    <div class="col col-4 py-5 pt-4">
      <div class="text-center text-light shadow-lg p-3 mb-2 rounded bg-success bg-gradient">
        <h2>Make a Booking!</h2>
        <%= simple_form_for [@offer, @booking], data: {controller: 'datepicker', class: "d-flex flex-column"} do |f| %>
          <p>Start Date: <%= f.date_field :start_date, class: 'rental-date' %></p>
          <p>End Date: <%= f.date_field :end_date, class: 'rental-date' %></p>
          <p class="fs-3">Price: $<%= @offer.price %></p>
          <%= f.submit "Book Now", class: "btn btn-light" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
